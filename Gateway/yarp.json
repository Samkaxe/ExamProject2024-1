{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FeatureFlags": {
    "EnableAuthRoutes": true,
    "EnableProductRoutes": true
  },
  "ReverseProxy": {
    "Clusters": {
      "Authentication":   {
        "Destinations": {
          "Auth_0": {
            "Address": "http://authservice:80"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/ServiceHealth/health"
          }
        }
      },
      "Inventory": {
        "Destinations": {
          "Inventory_0": {
            "Address": "http://inventoryservice:80"
          }
        }
      }
    },
    "Routes": {
      "register": {
        "ClusterId": "Authentication",
        "Match": {
          "Path": "/Auth/register"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          }
        ]
      },
      "login": {
        "ClusterId": "Authentication",
        "Match": {
          "Path": "/Auth/login"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          }
        ]
      },
      "products": {
        "ClusterId": "Inventory",
        "Match": {
          "Path": "/Product/{**catch-all}"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          }
        ]
      }
    },
    "Policies": {
      "Default": {
        "Retry": {
          "Count": 3,
          "BaseInterval": "00:00:02"
        },
        "CircuitBreaker": {
          "FailuresAllowedBeforeBreaking": 3,
          "DurationOfBreak": "00:01:00"
        }
      }
    }
  }
}
